<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutUs">


    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E3D1C1"
        android:paddingStart="8dp"
        android:paddingTop="8dp"
        android:paddingEnd="8dp">

        <TextView
            android:id="@+id/aboutUsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About Us"
            android:textColor="#19273a"
            android:textSize="35sp"
            android:fontFamily="@font/caramelvanilla"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/authorImageId"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/aboutUsTitle"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/julia" />

        <TextView
            android:id="@+id/authorNameId"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/authorImageId"
            app:layout_constraintTop_toBottomOf="@id/aboutUsTitle"
            android:layout_marginTop="28dp"
            android:gravity="center"
            android:textSize="18sp"
            android:text = "Julia Dalipe"
            android:textColor="#19273a"
            android:fontFamily="@font/ghiyareg"/>

        <TextView
            android:id="@+id/authorCourse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/authorImageId"
            app:layout_constraintTop_toBottomOf="@id/authorNameId"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="75dp"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="#19273a"
            android:text = "BSINSYS" />

        <TextView
            android:id="@+id/authorDesc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/authorImageId"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/authorCourse"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="10dp"
            android:gravity="left"
            android:textSize="15sp"
            android:maxLines="3"
            android:textColor="#19273a"
            android:text = "Her favorite food is Japanese foods because I get to taste unique flavors and dishes." />

        <ImageView
            android:id="@+id/authorImageId2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/authorImageId"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/geryco" />

        <TextView
            android:id="@+id/authorNameId2"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/authorImageId2"
            app:layout_constraintTop_toBottomOf="@id/authorImageId"
            android:layout_marginTop="28dp"
            android:gravity="center"
            android:textSize="18sp"

            android:text = "Geryco Dionisio"
            android:textColor="#19273a"
            android:fontFamily="@font/ghiyareg"/>

        <TextView
            android:id="@+id/authorCourse2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/authorImageId2"
            app:layout_constraintTop_toBottomOf="@id/authorNameId2"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="75dp"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="#19273a"
            android:text = "BSCS-ST" />

        <TextView
            android:id="@+id/authorDesc2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/authorImageId2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/authorCourse2"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="10dp"
            android:gravity="left"
            android:textSize="15sp"
            android:maxLines="3"
            android:textColor="#19273a"
            android:text = "His favorite food is Salmon because it tastes good and it is high in protein." />

        <ImageView
            android:id="@+id/authorImageId3"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/authorImageId2"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/brian" />

        <TextView
            android:id="@+id/authorNameId3"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/authorImageId3"
            app:layout_constraintTop_toBottomOf="@id/authorImageId2"
            android:layout_marginTop="28dp"
            android:gravity="center"
            android:textSize="18sp"
            android:text = "Brian Salangsang"
            android:textColor="#19273a"
            android:fontFamily="@font/ghiyareg"/>

        <TextView
            android:id="@+id/authorCourse3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/authorImageId3"
            app:layout_constraintTop_toBottomOf="@id/authorNameId3"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="75dp"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="#19273a"
            android:text = "BSINSYS" />

        <TextView
            android:id="@+id/authorDesc3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/authorImageId3"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/authorCourse3"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="10dp"
            android:gravity="left"
            android:textSize="15sp"
            android:maxLines="3"
            android:textColor="#19273a"
            android:text = "His favorite food is Seafood because I get to taste wide variety of foods from the sea." />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>